<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="travelinfo">

    <insert id="insert" parameterType="hashMap" useGeneratedKeys="true" keyProperty="travel_location_idx">
        insert into travel_location(user_id, country_a, country_b, country_c,
                                    country_detail, country_script, country_img)
             values (#{user_id}, #{country_a}, #{country_b}, #{country_c}, #{country_detail}, #{country_script}, #{country_img})
    </insert>

    <select id="detail" parameterType="hashMap" resultType="hashMap">
        select travel_location_idx, user_id, country_a, country_b, country_c,
               country_detail, country_script, country_img, create_date, update_date
          from travel_location
         where travel_location_idx = #{travel_location_idx}
    </select>

