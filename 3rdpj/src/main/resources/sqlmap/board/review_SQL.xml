    <!--조원재 23.04.05 리뷰 생성-->
    <insert id="insert" parameterType="com.goott.pj3.board.review.dto.ReviewDTO" >
        insert into plan_review(user_id, plan_idx, review_content, review_rating)
        values (#{user_id}, #{plan_idx}, #{review_content}, #{review_rating})
        <selectKey keyProperty="review_idx" order="AFTER" resultType="com.goott.pj3.board.review.dto.ReviewDTO">
            SELECT LAST_INSERT_ID() AS review_idx
        </selectKey>
    </insert>

    <insert id="file" parameterType="com.goott.pj3.board.review.dto.ReviewDTO">
        <selectKey keyProperty="review_idx" order="BEFORE" resultType="com.goott.pj3.board.review.dto.ReviewDTO">
            SELECT LAST_INSERT_ID() AS review_idx
        </selectKey>
            <foreach collection="img" item="item" separator=",">
            insert into review_img(review_idx, img)
            values (#{review_idx}, #{item})
            </foreach>
    </insert>

